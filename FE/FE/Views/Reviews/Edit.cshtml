@model FE.Models.Review

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Datos</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdReview" />
            <div class="form-group">
                <label asp-for="IdCitas" class="control-label"></label>
                <select asp-for="IdCitas" class="form-control" asp-items="ViewBag.IdCitas"></select>
                <span asp-validation-for="IdCitas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombrePacienteCita" class="control-label"></label>
                <input asp-for="NombrePacienteCita" class="form-control" />
                <span asp-validation-for="NombrePacienteCita" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comentario" class="control-label"></label>
                <input asp-for="Comentario" class="form-control" />
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estrellas" class="control-label"></label>
                <input asp-for="Estrellas" class="form-control" />
                <span asp-validation-for="Estrellas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" href="~/Reviews/Index"> Regresar </a>
    @*<a asp-action="Index">Back to List</a>*@
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
