@model FE.Models.Reunion

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Reunion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Dia" class="control-label"></label>
                <input asp-for="Dia" class="form-control" />
                <span asp-validation-for="Dia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdDentista" class="control-label"></label>
                <select asp-for="IdDentista" class="form-control" asp-items="ViewBag.IdDentista"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdRecepcionista" class="control-label"></label>
                <select asp-for="IdRecepcionista" class="form-control" asp-items="ViewBag.IdRecepcionista"></select>
            </div>
            <div class="form-group">
                <label asp-for="DetallesReunion" class="control-label"></label>
                <input asp-for="DetallesReunion" class="form-control" />
                <span asp-validation-for="DetallesReunion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" href="~/Reunion/Index"> Regresar </a>
    @*<a asp-action="Index">Back to List</a>*@
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

